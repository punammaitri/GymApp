<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_border" />
            <padding
                android:bottom="1.5dp"
                android:left="0.5dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/border_orange" />
            <padding
                android:bottom="0dp"
                android:left="4dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <padding
                android:bottom="1.5dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
</layer-list>